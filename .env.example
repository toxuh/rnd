# üé≤ RND Application Environment Configuration
# Copy this file to .env.local for development or .env for production

# ================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ================================

# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL="postgresql://rnd_user:rnd_secure_password@localhost:5432/rnd_db?schema=public"

# ================================
# üî¥ REDIS CONFIGURATION
# ================================

# Redis URL for rate limiting and caching
REDIS_URL="redis://localhost:6379"

# ================================
# üîë API KEY CONFIGURATION
# ================================

# Main application API key (for general use)
API_KEY_MAIN="rnd_dev_main_key_12345"

# Admin API key (full system access)
API_KEY_ADMIN="rnd_dev_admin_key_67890"

# Limited API key (restricted access)
API_KEY_LIMITED="rnd_dev_limited_key_abcde"

# Disable API key authentication (development only)
DISABLE_API_KEY_AUTH="false"

# ================================
# üõ°Ô∏è SECURITY CONFIGURATION
# ================================

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS="http://localhost:3000,https://rnd.so"

# Webhook secret for request signing
WEBHOOK_SECRET="dev_webhook_secret_change_me"

# JWT secret for user authentication
JWT_SECRET="your_jwt_secret_key_change_me_in_production"

# ================================
# ‚ö° RATE LIMITING CONFIGURATION
# ================================

# Global rate limit (requests per minute)
RATE_LIMIT_GLOBAL_MAX="100"

# Random endpoint rate limit (requests per minute)
RATE_LIMIT_RANDOM_MAX="30"

# Strict endpoint rate limit (requests per 5 minutes)
RATE_LIMIT_STRICT_MAX="10"

# ================================
# üîß APPLICATION CONFIGURATION
# ================================

# Maximum request body size in bytes (10KB default)
MAX_REQUEST_SIZE="10240"

# Enable detailed request logging
ENABLE_REQUEST_LOGGING="true"

# Node environment
NODE_ENV="development"

# ================================
# üîå ESP32 HARDWARE CONFIGURATION
# ================================

# ESP32 server URL for true randomness
# Replace with your ESP32 device IP and port
RND_SERVER_URL="http://192.168.1.161"

# ================================
# üåê FRONTEND CONFIGURATION
# ================================

# Public API key for frontend (optional, for public endpoints)
NEXT_PUBLIC_API_KEY=""

# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ================================
# üìß EMAIL CONFIGURATION (Future)
# ================================

# Email service configuration (for user verification)
# EMAIL_SERVICE_API_KEY=""
# EMAIL_FROM_ADDRESS=""

# ================================
# üìä MONITORING CONFIGURATION (Future)
# ================================

# Application monitoring
# SENTRY_DSN=""
# ANALYTICS_ID=""

# ================================
# üê≥ DOCKER CONFIGURATION
# ================================

# PostgreSQL password for Docker
POSTGRES_PASSWORD="rnd_secure_password"

# ================================
# üöÄ PRODUCTION OVERRIDES
# ================================

# In production, override these values:
# - Use strong, unique API keys
# - Set secure JWT_SECRET
# - Configure proper ALLOWED_ORIGINS
# - Set up proper DATABASE_URL
# - Configure email service
# - Enable monitoring services
